# Copy to airflow/.env and fill in values.

# --- Airflow ---
AIRFLOW_UID=50000
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# --- Project: YouTube ---
YOUTUBE_API_KEY=PASTE_YOUR_YOUTUBE_API_KEY
REGION_CODE=US

# --- Project: MSSQL (host SQL Server Express) ---
MSSQL_HOST=host.docker.internal
MSSQL_PORT=14330
MSSQL_DB=ytmusicrec
MSSQL_USER=ytmusicrec_app
MSSQL_PASSWORD=PASTE_YOUR_SQL_PASSWORD
MSSQL_ENCRYPT=yes
MSSQL_TRUST_SERVER_CERT=yes

# --- Project: Ollama ---
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b

# --- Project: Discord ---
DISCORD_WEBHOOK_URL=

# --- Project: Google Sheets ---
GOOGLE_SHEETS_SPREADSHEET_ID=PASTE_SPREADSHEET_ID
GOOGLE_OAUTH_CLIENT_JSON=/run/secrets/google_oauth_client.json
GOOGLE_OAUTH_TOKEN_JSON=/run/secrets/google_token.json

# --- Local output mount ---
# Must be an absolute Windows path to your Desktop, shared with Docker Desktop.
# Example:
# WINDOWS_DESKTOP_PATH=C:\Users\berna\Desktop
WINDOWS_DESKTOP_PATH=C:\Users\berna\Desktop

# Optional
YTMUSICREC_DRY_RUN=false
LOG_LEVEL=INFO
